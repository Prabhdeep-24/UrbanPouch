<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    .cart-item img {
      width: 90px;
      height: 90px;
      object-fit: cover;
      border-radius: 8px;
    }
    .quantity-controls button {
      width: 35px;
      height: 35px;
      border-radius: 50%;
      font-weight: bold;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .quantity-controls span {
      width: 30px;
      text-align: center;
      font-weight: bold;
      font-size: 1.1rem;
    }
  </style>
</head>

<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">UrbanPouch</a>
      <a href="/products" class="btn btn-outline-light">üõçÔ∏è Continue Shopping</a>
    </div>
  </nav>

  <div class="container py-5">
    <h2 class="fw-bold text-center text-primary mb-4"><%= title %></h2>

    <div id="cart-container" class="bg-white p-4 rounded shadow">
      <div id="cart-items"></div>
      <hr />
      <h4 class="text-end mt-3">Total: ‚Çπ<span id="cart-total">0</span></h4>
      <div class="text-end mt-3">
        <button id="clear-cart" class="btn btn-danger">Clear Cart</button>
      </div>
    </div>
  </div>


  <script>
    document.addEventListener("DOMContentLoaded", () => {
        console.log("üõí Cart Page Script Loaded");

        const cartItems = document.getElementById("cart-items");
        const cartTotal = document.getElementById("cart-total");
        const clearCartBtn = document.getElementById("clear-cart");

        // Load existing cart or empty array
        let cart = JSON.parse(localStorage.getItem("cart")) || [];

        // Save and re-render cart
        function saveCart() {
            localStorage.setItem("cart", JSON.stringify(cart));
            renderCart();
        }

        // Render all cart items
        function renderCart() {
            cartItems.innerHTML = "";
            let total = 0;

            if (cart.length === 0) {
            cartItems.innerHTML = `<p class="text-center text-muted">Your cart is empty üõí</p>`;
            cartTotal.textContent = "0";
            return;
            }

            cart.forEach(item => {
            const discountedPrice = item.price;

            total += discountedPrice * item.quantity;

            const div = document.createElement("div");
            div.classList.add("cart-item", "d-flex", "align-items-center", "justify-content-between", "border-bottom", "py-3");

            div.innerHTML = `
                <div class="d-flex align-items-center gap-3">
                <img src="${item.image}" alt="${item.name}">
                <div>
                    <h5 class="mb-1">${item.name}</h5>
                    <p class="mb-0 text-muted">‚Çπ${discountedPrice.toFixed(2)}</p>
                </div>
                </div>
                <div class="quantity-controls d-flex align-items-center gap-2">
                <button class="btn btn-outline-secondary btn-sm minus">‚Äì</button>
                <span>${item.quantity}</span>
                <button class="btn btn-outline-secondary btn-sm plus">+</button>
                </div>
            `;

            // Handle "+" button
            div.querySelector(".plus").addEventListener("click", () => {
                item.quantity++;
                saveCart();
            });

            // Handle "‚Äì" button
            div.querySelector(".minus").addEventListener("click", () => {
                item.quantity--;
                if (item.quantity <= 0) {
                cart = cart.filter(p => p.id !== item.id);
                }
                saveCart();
            });

            cartItems.appendChild(div);
            });

            cartTotal.textContent = total.toFixed(2);
        }

        // Clear cart
        clearCartBtn.addEventListener("click", () => {
            cart = [];
            localStorage.removeItem("cart");
            renderCart();
        });

        renderCart();

        window.addEventListener("pageshow", function (event) {
          const navType = window.performance.getEntriesByType("navigation")[0]?.type;
          if (event.persisted || navType === "back_forward") {
            window.location.reload(true);
          }
        });
    });

  </script>
</body>
</html>
