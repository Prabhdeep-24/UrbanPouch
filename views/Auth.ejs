<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UrbanPouch | Login & Register</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>

  <body class="bg-light d-flex align-items-center justify-content-center" style="height: 100vh;">

    <!-- Flash Messages -->
    <div class="position-absolute top-0 w-100 p-3">
      <% if (success_msg && success_msg.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
          <%= success_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <% if (error_msg && error_msg.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
          <%= error_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
    </div>

    <!-- Container -->
    <div class="container bg-white rounded-4 shadow-lg p-0 overflow-hidden" style="max-width: 900px;">
      <div class="row g-0">

        <!-- Left Side: Login -->
        <div class="col-md-6 p-5 d-flex flex-column justify-content-center bg-primary text-white">
          <h2 class="fw-bold mb-4 text-center">Welcome Back ðŸ‘‹</h2>
          <form action="/users/login" method="POST">
            <div class="mb-3">
              <label class="form-label">Email</label>
              <input type="email" name="email" class="form-control" required />
            </div>
            <div class="mb-3">
              <label class="form-label">Password</label>
              <input type="password" name="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-light w-100 fw-semibold">Login</button>
          </form>
        </div>

        <!-- Right Side: Register -->
        <div class="col-md-6 p-5 d-flex flex-column justify-content-center">
          <h2 class="fw-bold mb-4 text-center text-primary">Create Account ðŸš€</h2>
          <form action="/users/register" method="POST">
            <div class="mb-3">
              <label class="form-label">Full Name</label>
              <input type="text" name="Name" class="form-control" required />
            </div>
            <div class="mb-3">
              <label class="form-label">Email</label>
              <input type="email" name="email" class="form-control" required />
            </div>
            <div class="mb-3">
              <label class="form-label">Password</label>
              <input type="password" name="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary w-100 fw-semibold">Register</button>
          </form>
        </div>

      </div>
    </div>

  </body>
</html>
