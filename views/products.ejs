<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= title %>
    </title>
    <style>
        .product-image {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 8px 8px 0 0;
        }

        .card {
            transition: transform 0.3s ease;
        }

        .cards:hover {
            transform: scale(1.01);
            /* box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2); */
        }

        /* üßÆ Quantity counter layout */
        .quantity-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 12px;
        margin-top: 8px;
        padding: 6px 0;
        }

        /* + and ‚Äì buttons */
        .btn-quantity {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        font-size: 1.4rem;
        font-weight: bold;
        line-height: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: all 0.2s ease-in-out;
        }

        .btn-quantity:hover {
        transform: scale(1.1);
        }

        /* The number between + and ‚Äì */
        .quantity-count {
        min-width: 40px;
        font-size: 1.3rem;
        color: #333;
        text-align: center;
        user-select: none;
        }

        /* Responsive design for smaller screens */
        @media (max-width: 576px) {
            .btn-quantity {
                width: 36px;
                height: 36px;
                font-size: 1.2rem;
            }

            .quantity-count {
                font-size: 1.1rem;
            }
        }

    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>

<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container">
    <a class="navbar-brand fw-bold" href="/">UrbanPouch</a>

    <div class="d-flex align-items-center gap-3">
      <% if (user) { %>
        <% if (user.isAdmin) { %>
          <!-- üßë‚Äçüíº Admin View -->
          <a href="/owners/new" class="btn btn-success fw-semibold">+ Add Product</a>
          <a href="/owners/account" class="btn btn-outline-light">Admin Dashboard</a>
          <a href="/users/logout" class="btn btn-warning text-dark fw-semibold">Logout</a>

        <% } else { %>
          <!-- üë§ Regular User View -->
          <a href="/cart" class="btn btn-light position-relative">üõí Cart</a>
          <a href="/users/account" class="btn btn-outline-light">My Account</a>
          <a href="/users/logout" class="btn btn-warning text-dark fw-semibold">Logout</a>
        <% } %>

      <% } else { %>
        <!-- üßç‚Äç‚ôÇÔ∏è Guest View -->
        <a href="/login" class="btn btn-outline-light btn-sm">Login</a>
        <a href="/register" class="btn btn-light btn-sm text-primary fw-bold">Sign Up</a>
      <% } %>
    </div>
  </div>
</nav>

    <div class="container py-5">
        <h2 class="text-center mb-4 fw-bold text-primary">
            <%= title %>
        </h2>

        <div class="row g-4">
            <% if (products && products.length> 0) { %>
                <% products.forEach(product=> { %>
                    <div class="col-md-4 col-sm-6 cards">
                        <div class="card h-100 shadow-sm border-0">

                            <% if (product.image) { %>
                                <img src="data:image/png;base64,<%= product.image.toString('base64') %>"
                                    class="card-img-top product-image" alt="<%= product.name %>" />
                                <% } else { %>
                                    <img src="https://via.placeholder.com/300x200?text=No+Image"
                                        class="card-img-top product-image" alt="No image" />
                                    <% } %>

                                        <div class="card-body text-center">
                                            <h5 class="fw-bold">
                                                <%= product.name %>
                                            </h5>

                                            <% if (product.discount && product.discount> 0) { %>
                                                <p class="text-muted mb-1">
                                                    <span style="text-decoration: line-through; color: gray;">
                                                        ‚Çπ<%= product.price %>
                                                    </span>
                                                    <span class="fw-bold text-success ms-2">
                                                        ‚Çπ<%= (parseFloat(product.price) - (parseFloat(product.price) *
                                                            (product.discount / 100))).toFixed(2) %>
                                                    </span>
                                                </p>
                                                <p class="text-danger mb-2">Discount: <%= product.discount %>%</p>
                                                <% } else { %>
                                                    <p class="text-muted mb-1">‚Çπ<%= product.price %>
                                                    </p>
                                                    <p class="mb-2">Discount: 0%</p>
                                                    <% } %>

                                                        <div class="text-center">
                                                            <% if (user && user.isAdmin) { %>
                                                                <button class="btn btn-danger w-100 mt-2 remove-product-btn" data-id="<%= product._id %>">
                                                                üóëÔ∏è Remove Product
                                                                </button>
                                                            <% } else { %>
                                                                <button class="btn btn-outline-primary w-100 add-to-cart-btn mt-2" data-id="<%= product._id %>">
                                                                üõí Add to Cart
                                                                </button>
                                                            <% } %>
                                                        </div>


                                        </div>
                        </div>
                    </div>

                    <% }) %>
                        <% } else { %>
                            <div class="text-center text-muted">No products available</div>
                            <% } %>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            console.log("‚úÖ Cart system active");

            // Load existing cart or empty
            let cart = JSON.parse(localStorage.getItem("cart")) || [];

            // Save and sync
            function saveCart() {
                localStorage.setItem("cart", JSON.stringify(cart));
            }

            // Update cart badge count
            function updateCartBadge() {
                const count = cart.reduce((total, item) => total + item.quantity, 0);
                const badge = document.getElementById("cart-count");
                if (badge) badge.textContent = count;
            }

            // Render counter UI for a product
            function renderCounter(button, id) {
                const wrapper = button.parentElement;
                const item = cart.find(p => p.id === id);
                const qty = item ? item.quantity : 1;

                wrapper.innerHTML = `
                <div class="quantity-wrapper d-flex justify-content-center align-items-center gap-2">
                    <button class="btn btn-outline-secondary btn-sm minus-btn">‚Äì</button>
                    <span class="fw-bold quantity-count">${qty}</span>
                    <button class="btn btn-outline-secondary btn-sm plus-btn">+</button>
                </div>
                `;

                const minusBtn = wrapper.querySelector(".minus-btn");
                const plusBtn = wrapper.querySelector(".plus-btn");
                const qtyDisplay = wrapper.querySelector(".quantity-count");

                minusBtn.addEventListener("click", () => {
                const target = cart.find(p => p.id === id);
                if (!target) return;

                target.quantity--;
                if (target.quantity <= 0) {
                    cart = cart.filter(p => p.id !== id);
                    wrapper.innerHTML = `
                    <button class="btn btn-outline-primary w-100 add-to-cart-btn" data-id="${id}">
                        Add to Cart
                    </button>
                    `;
                    attachAddToCart(wrapper.querySelector(".add-to-cart-btn"));
                } else {
                    qtyDisplay.textContent = target.quantity;
                }
                saveCart();
                updateCartBadge();
                });

                plusBtn.addEventListener("click", () => {
                const target = cart.find(p => p.id === id);
                if (!target) return;
                target.quantity++;
                qtyDisplay.textContent = target.quantity;
                saveCart();
                updateCartBadge();
                });
            }

            // Attach Add-to-Cart behavior
            function attachAddToCart(button) {
                button.addEventListener("click", () => {
                    const card = button.closest(".card");
                    const id = button.dataset.id;
                    const name = card.querySelector("h5").textContent.trim();
                    const image = card.querySelector("img").src;

                    // üß© FIX: define the discounted price span selector
                    const discountedPriceEl = card.querySelector(".fw-bold.text-success");
                    const discountEl = card.querySelector(".text-danger");

                    let price = 0;

                    if (discountedPriceEl) {
                    // discounted price exists
                    price = parseFloat(discountedPriceEl.textContent.replace(/[^0-9.]/g, "")) || 0;
                    } else {
                    // otherwise use normal text-muted price
                    const priceTextEl = card.querySelector(".text-muted");
                    price = parseFloat(priceTextEl ? priceTextEl.textContent.replace(/[^0-9.]/g, "") : "0") || 0;
                    }

                    const discount = discountEl ? parseFloat(discountEl.textContent.replace(/\D/g, "")) : 0;

                    const existing = cart.find(item => item.id === id);
                    if (existing) {
                    existing.quantity++;
                    } else {
                    cart.push({ id, name, price, image, discount, quantity: 1 });
                    }

                    saveCart();
                    updateCartBadge();
                    renderCounter(button, id);
                });
            }

            // Attach to all Add-to-Cart buttons
            document.querySelectorAll(".add-to-cart-btn").forEach(button => {
                const id = button.dataset.id;
                const existing = cart.find(item => item.id === id);
                if (existing) {
                renderCounter(button, id); // already in cart ‚Üí show counter
                } else {
                attachAddToCart(button);
                }
            });

            // Initialize cart badge
            updateCartBadge();
        });


        document.querySelectorAll(".remove-product-btn").forEach((btn) => {
            btn.addEventListener("click", async () => {
            const id = btn.dataset.id;
            if (!confirm("Are you sure you want to delete this product?")) return;

            try {
                const res = await fetch(`/products/${id}`, { method: "DELETE" });
                const data = await res.json();

                if (data.success) {
                    btn.closest(".cards").remove(); // remove the card from UI instantly
                }
            } catch (err) {
                console.error(err);
                alert("Something went wrong!");
            }
            });
        });

        window.addEventListener("pageshow", function (event) {
            const navType = window.performance.getEntriesByType("navigation")[0]?.type;
            if (event.persisted || navType === "back_forward") {
            window.location.reload(true);
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>