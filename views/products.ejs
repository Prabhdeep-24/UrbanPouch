<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">UrbanPouch</a>
            <div>
                <a href="/products/new" class="btn btn-success fw-semibold">+ Add Product</a>
                <a href="/users/logout" class="btn btn-outline-light btn-sm ms-2">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container py-5">
        <h2 class="text-center mb-4 fw-bold text-primary">
            <%= title %>
        </h2>

        <div class="row g-4">
            <% if (products.length> 0) { %>
                <% products.forEach(product=> { %>
                    <div class="col-md-4 col-sm-6">
                        <div class="card h-100 shadow-sm border-0">
                            <% if (product.Image) { %>
                                <img src="data:image/png;base64,<%= product.Image.toString('base64') %>"
                                    class="card-img-top" alt="<%= product.name %>" />
                                <% } else { %>
                                    <img src="https://via.placeholder.com/300x200?text=No+Image" class="card-img-top"
                                        alt="No image" />
                                    <% } %>

                                        <div class="card-body">
                                            <h5 class="fw-bold">
                                                <%= product.name %>
                                            </h5>
                                            <p class="text-muted mb-1">â‚¹<%= product.Price %>
                                            </p>
                                            <p class="mb-1">Discount: <%= product.discount %>%</p>
                                        </div>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <div class="text-center text-muted">No products available</div>
                            <% } %>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>